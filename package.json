{
  "engines": {
    "node":"17.x"
  },
  "dependencies": {
    "ejs": "^3.1.6",
    "express": "^4.17.3",
    "pg": "^8.7.3",
    "sharp": "^0.30.3"
  },
  "name": "ebisu_website",
  "version": "1.0.0",
  "main": "app.js",
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.4",
    "eslint": "^8.10.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "sass": "^1.49.9"
  },
  "scripts": {
    "watch:sass": "sass  --no-source-map --watch assets/scss/main.scss:assets/css/main.css",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "nodemon app.js",
    "devStart": "npm-run-all --parallel watch serve",
    "build:sass": "sass  --no-source-map assets/scss/main.scss:assets/css/main.css",
    "build:postbuild": "postcss assets/css/*.css -u autoprefixer cssnano -r --no-map",
    "build": "npm-run-all --parallel build:*",
    "start": "node app.js"
  },
